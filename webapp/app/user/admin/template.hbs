<div class="container mt-3">
  <h4>User Roles</h4>
  <div class="row mt-5">

    {{#each roles as |role|}}
      <div class="col border border-secondary p-3 m-1 d-flex justify-content-between">
        <strong>{{title-case role.name}}</strong>

        {{boolean-toggle name=role.name value=role.enabled enabled=(can "edit_user_roles") action=(action "toggle" role.name)}}
      </div>
    {{/each}}
  </div>
</div>
