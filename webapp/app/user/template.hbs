<div class="container">
  <h1><img class="img-circle" src="{{gravatar-url model.email}}?s=40"> {{model.display_name}}</h1>

  <ul class="nav nav-tabs">
    {{#nav-link to="user.sessions"}}Sessions{{/nav-link}}
    {{# with session.data.authenticated.user_info as |user|}}
      {{#if (or user.can.admin (eq user.email model.email)) }}
        {{#nav-link to="user.preferences"}}Preferences{{/nav-link}}
      {{/if}}
    {{/with}}
  </ul>
</div>
{{outlet}}
