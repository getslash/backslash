{{test-overview test_model=test_model test_metadata=test_metadata session_model=session_model}}

<div class="mt-3">

  {{#bs-nav type="tabs" as |nav|}}
    {{#nav.item classNames="test-info-tab"}}
      {{#nav.link-to 'session.test.index'}}
        Test Info
      {{/nav.link-to}}
    {{/nav.item}}

    {{#if test_model.num_errors}}
      {{#nav.item}}
        {{#nav.link-to 'session.test.errors'}}
          Errors <span class="badge badge-pill badge-danger">{{test_model.num_errors}}</span>
        {{/nav.link-to}}
      {{/nav.item}}
    {{/if}}

    {{#if test_model.num_interruptions}}
      {{#link-to 'session.test.interruptions' tagName='li'}}
        Interruptions <span class="badge badge-pill badge-danger">{{test_model.num_interruptions}}</span>
      {{/link-to}}
    {{/if}}
    {{#with test_model.num_warnings as |num_warnings|}}
      {{#if num_warnings}}
        {{#nav.item}}
          {{#nav.link-to 'session.test.warnings'}}
            Warnings <span class="badge badge-pill badge-warning">{{num_warnings}}</span>
          {{/nav.link-to}}
        {{/nav.item}}
      {{/if}}
    {{/with}}

    {{#nav.item}}
      {{#nav.link-to 'session.test.comments'}}
        Comments
        {{#if test_model.num_comments}}
          <span class="badge badge-pill badge-light"> {{test_model.num_comments}} </span>
        {{/if}}
      {{/nav.link-to}}
    {{/nav.item}}

  {{/bs-nav}}
</div>

{{outlet}}
