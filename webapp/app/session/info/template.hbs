<div class="m-3 card">
  <div class="card-header">Subjects</div>
  <div class="card-body">
    <div class="container-fluid">
      <div class="row">
        {{#each session_model.subjects as |subject|}}
          <div class="col-sm-6 col-md-4">
            {{#link-to "subject" subject.name}}{{subject.name}}{{/link-to}}
            <small><strong>{{subject.product}} <div class="badge bade-pill">{{subject.version}}</div></strong></small>
            <small>rev. {{elements/copyable-text value=subject.revision}}</small>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>

{{#if related_entities}}

  <div class="m-3 card">
    <div class="card-header">Related Entities</div>
    <div class="card-body">
      {{#each related_entities as |entity|}}
        {{#link-to "sessions" (query-params search=(concat "related=" entity.name))}}{{entity.name}}{{/link-to}} <small><div class="badge badge-pill badge-secondary">{{entity.entity_type}}</div></small>
      {{/each}}
    </div>
  </div>

{{/if}}

{{metadata/metadata-table metadata=metadata additional=additional_metadata related_entities=related_entities}}
