<div class="row">
  <div class="{{if collapsed 'd-none' 'col-sm-12 col-md-3'}} ">
    {{yield side}}
  </div>
  <div class="col-sm-12 col-md-{{if collapsed 12 9}} main">
    <div class="hidden-sm hidden-xs toggle" {{action (toggle "collapsed" this)}} title="Toggle sidebar">
      <i class="fa fa-angle-double-{{if collapsed 'right' 'left'}}"></i>
    </div>
    <div class="outlet">
      {{yield main}}
    </div>
  </div>
</div>
