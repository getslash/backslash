{{#bs-navbar  as |navbar|}}
  {{#navbar.content}}
    {{#navbar.nav as |nav|}}
      {{#if back_button}}
        {{#nav.item}}
          <button type="button" class="btn btn-default" {{action "back"}}> <i class="fa fa-arrow-left"></i> Back</button>
        {{/nav.item}}
      {{/if}}

      {{yield nav}}
    {{/navbar.nav}}
  {{/navbar.content}}
{{/bs-navbar}}
