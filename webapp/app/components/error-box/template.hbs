<div class="p-1">
  {{expand-toggle expanded=(mut expanded)}}
  <div class="text-muted d-inline-block">

    {{moment-time unix=error.timestamp}} ({{moment-time ago=error.timestamp}}):
  </div>
  <span class="text-monospace text-danger">
    {{error.exception_type}}
  </span>
  {{#copy-button clipboardText=error.message title="Copy exception message to clipboard"}}<i class="fa fa-copy"></i>{{/copy-button}}
  {{#if error.is_fatal}}
    <div class="badge badge-danger">Fatal</div>
  {{/if}}
</div>

<div class="m-3 p-1 exception-message overflow-scroll">{{if expanded error.message error.abbreviated_message}}</div>

{{#if expanded}}
  {{error-detail error=error}}{{else}}
{{/if}}
