<table class="table table-sm table-bordered">
  <thead>
    <tr>
      <th colspan="2">
        {{title}}
      </th>
    </tr>
  </thead>
  <tbody>

    {{#each data as |var|}}
      <tr>
        <td class="text-muted">
          {{#if normalize_names}}
            {{capitalize (undasherize var.name)}}
          {{else}}
            {{var.name}}
          {{/if}}
        </td>
        <td>{{#if (s-starts-with var.value "http://" "https://")}}{{linkify var.value}}{{else}}{{var.value}}{{/if}}</td>
      </tr>
    {{/each}}

  </tbody>
</table>
