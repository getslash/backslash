<div class="row">
  <div class="col-md-6 col-sm-12">

    <div class="card m-2 mb-3">
      <div class="card-header d-flex">
        {{users/user-avatar email=comment.user_email}}
        <span>
          <strong>{{comment.user}}</strong> <span class="text-muted">commented {{moment-time ago=comment.timestamp}}</span>
          {{#if comment.edited}}<span class="badge badge-light ml-2">Edited</span>{{/if}}
        </span>
        <div class="ml-auto">
          {{#if comment.can.edit}}
            <i class="fa fa-pencil mx-2 clickable" {{action 'start_editing'}} title="Edit this comment"></i>
          {{/if}}
          {{#if comment.can.delete}}
            <i class="fa fa-trash mx-2 clickable" {{action 'delete_comment'}} title="Delete this comment"></i>
          {{/if}}
        </div>
      </div>
      <div class="card-body">
        <p class="card-text">
          {{#if editing}}
            <div class="form-group">
              {{textarea cols="80" rows="6" class="form-control" value=comment.comment}}
            </div>
            <div class="form-group">
              <button class="btn btn-success pull-right add-margin-left" {{action "save"}}>Update Comment</button>
              <button class="btn btn-default pull-right add-margin-left" {{action "cancel_editing"}}>Cancel</button>
            </div>

          {{else}}
            {{markdown-to-html comment.comment}}
          {{/if}}
        </p>
      </div>
    </div>

  </div>
</div>
