{{#if help_displayed}}
  {{#modal-dialog onClose=(toggle "help_displayed" this) targetAttachment='center' translucentOverlay=true}}
    <div class="container">
      <h3>Keyboard Shortcuts Help</h3>
      <table class="table">
        <thead>
          <tr>
            <th>Shortcut</th><th>Action</th>
          </tr>
        </thead>
        <tbody>
          {{#each keys as |k|}}
            {{#if k.description}}
              <tr>
                <td><code>{{k.key}}</code></td>
                <td>{{k.description}}</td>
              </tr>
            {{/if}}
          {{/each}}
        </tbody>
      </table>
    </div>
  {{/modal-dialog}}
{{/if}}
