<nav class="navbar navbar-default navbar-inverse navbar-fixed-top" role="navigation">


  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <a class="navbar-brand" href="#"><img id="navbar-brand-img" src="/static/assets/img/backslash-logo.png"></a>
      <div class="spinner"></div>

    </div>
    {{# with session.data.authenticated.user_info as |u|}}
      {{#if u.email }}
        <ul class="nav navbar-nav">
          {{#nav-link "sessions"}}Sessions{{/nav-link}}
          {{#nav-link "subjects"}}Subjects{{/nav-link}}
          {{#nav-link "users"}}Users{{/nav-link}}
          {{# if u.can.moderate }}
            {{#nav-link "stats"}}Stats{{/nav-link}}
          {{/if}}
          {{# if u.can.admin }}
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                Admin <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
              </ul>
            </li>
          {{/if}}
          {{# if app_config.debug }}
            <li class="dropdown">
              <a class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                Debug <span class="caret"></span>
              </a>
              <ul class="dropdown-menu">
                {{#nav-link "component-proofing"}}Component Proofing Page{{/nav-link}}
              </ul>
            </li>
          {{/if}}

        </ul>

        <form class="navbar-form navbar-right">
          <button type="submit" class="btn btn-default" {{action "invalidateSession"}}>Logout</button>
        </form>

        <p class="navbar-text navbar-right">
          {{#link-to "user.preferences" u.email tagName="span" class="clickable"}}{{users/user-avatar user=u}} {{u.name}} {{/link-to}}
        </p>
      {{/if}}
    {{/with}}
  </div>

  {{# if loading}}
  <div class="loading-indicator"></div>
  {{/if}}
</nav>




{{outlet name="main"}}

<footer class="footer">
  <div class="container text-center">
    <p class="text-muted">
      Backslash v{{app_version}}
    </p>
    <p class="text-muted">
      <a href="http://getweber.github.io/" target="_blank">
        <img class="weber-logo" src="http://getweber.github.io/img/hatched-from-weber-badge.svg" style="height: 2em">
      </a>
    </p>
  </div>
</footer>
