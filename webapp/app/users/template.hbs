{{#tool-bar}}
{{/tool-bar}}

<div class="container">
<table class="table table-hover">
  <thead>
    <tr>
      <th></th>
      {{sortable-heading sort=sort title="Email" set_sort="set_sort"}}
      {{sortable-heading sort=sort title="Last Active" name="last_activity" set_sort="set_sort"}}
    </tr>
  </thead>
  <tbody>
{{#each model as |user| }}
  {{#link-to "user.sessions" user.email tagName="tr" classNames="clickable"}}
    <td>
      {{users/user-avatar user=user small=true}}
    </td>
    <td>
      {{user.email}}
    </td>
    <td>
      {{#if user.last_activity}}
        {{moment-time ago=user.last_activity}}
      {{else}}
        <span class="faint">(Never)</span>
      {{/if}}
    </td>
  {{/link-to}}
{{/each}}
  </tbody>
</table>
</div>

{{pagination-nav page=page pages_total=model.meta.pages_total num_visible=model.meta.page_size next_page="next_page" prev_page="prev_page" goto_page="goto_page"}}
